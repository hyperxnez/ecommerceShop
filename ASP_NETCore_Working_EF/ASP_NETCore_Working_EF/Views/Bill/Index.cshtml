@using ASP_NETCore_Working_EF.Models
@model List<Bill>
    <div class="main-content-wrapper d-flex clearfix">
        <div class="cart-table-area section-padding-100">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-lg-8">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        DateCreate
                                    </th>
                                    <th>
                                        Customer Name 
                                    </th>
                                    <th>
                                        Phone
                                    </th>
                                    <th>
                                        Address
                                    </th>
                                    <th>
                                        Total
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th>
                                        CidNavigation
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateCreate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cphone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CAddress)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Total)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CidNavigation.Cname)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.OId">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.OId">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.OId">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
